#define MOD 1000000007
#define PI 3.141592654
#define TRUE 1
#define FALSE 0
#define LL long long int

using namespace std;

int main()
{
        int T=1;
        //scanf("%d",&T);
        while(TRUE)
        {
                double l;
                cin>>l;
                if(l==0.00)
                        break;
                printf("%.2lf\n",(l*l)/(2*PI));
        }
        return 0;
}
